{
  "name": "minecraft-project-manager",
  "displayName": "Minecraft Project Manager",
  "description": "Project Manager For Minecraft Datapacks",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.77.0"
  },
  "author": {
    "email": "hefeolgun10@gmail.com",
    "name": "efekos"
  },
  "license": "ISC",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mc.world.create",
        "title": "Create Datapack",
        "enablement": "true",
        "icon": "$(plus)",
        "category": "MCM"
      },
      {
        "command": "mc.refresh",
        "title": "Refresh",
        "category": "MCM",
        "enablement": "true",
        "icon":"$(refresh)"
      },
      {
        "command": "mc.open",
        "title": "Open Datapack",
        "category": "MCM",
        "enablement": "true"
      },
      {
        "command": "mc.datapack.delete",
        "title": "Delete Datapack",
        "enablement": "true",
        "icon":"$(trash)",
        "category": "MCM"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "./images/icon.svg",
          "id": "mctab",
          "title": "Minecraft Datapack Manager"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "mc.open",
          "when": "false"
        },
        {
          "command": "mc.refresh",
          "when": "false"
        },
        {
          "command": "mc.world.create",
          "when": "false"
        },
        {
          "command": "mc.datapack.delete",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "mc.refresh",
          "when": "view == worlds",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "when": "view == worlds && viewItem == world",
          "group": "inline",
          "command": "mc.world.create"
        },
        {
          "when": "view == worlds && viewItem == datapack",
          "group": "inline",
          "command": "mc.datapack.delete"
        }
      ]
    },
    "views": {
      "mctab":[
        {
          "id": "worlds",
          "name": "Worlds",
          "visibility": "visible",
          "type": "tree",
          "contextualTitle": "Worlds",
          "icon": "./images/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "enablement": "true",
        "contents": "No worlds yet. Make a minecraft world to manage It's datapacks from here",
        "view":"mctab",
        "when": "view==worlds"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "ts-loader": "^9.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5"
  }
}